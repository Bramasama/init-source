      </article>
    </div>
<!-- CTA -->
    <div class="mt-12">
      <a
        href="#contact"
        class="inline-flex items-center rounded-full bg-[#007BFF] px-7 py-4 text-white text-lg font-semibold hover:bg-[#00E6C3] hover:text-[#111827] transition"
