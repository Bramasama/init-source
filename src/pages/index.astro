---
import Base from "../layouts/Base.astro";
import "../styles/base.css";
import Header from "../components/Header.astro";

import { BRAND } from "../seo/site.config";
import Seofaq from "../components/Seofaq.astro";
import SeoHowTo from "../components/SeoHowTo.astro";

const faqs = [
  { q: "What roles do you hire for?", a: "Software, data, and product roles across the UK." },
  { q: "How fast can we hire?", a: "Shortlist in days. Offers in weeks, not months." }
];

const steps = [
  { name: "Discovery", text: "Clarify the role, success profile, and timelines." },
  { name: "Sourcing", text: "Targeted outreach and screening of qualified candidates." },
  { name: "Shortlist", text: "3‚Äì5 top candidates delivered with structured notes." },
  { name: "Offer & Start", text: "Negotiation and onboarding coordination." }
];
---

<Base
  title="Init Source Ltd | Hire Proven Software & Tech Talent Fast"
  description="AI-first, UK-based recruitment for software, data, and product professionals. Hire top talent in weeks, not months."
  image={`${BRAND.domain}/og-image.jpg`}
  canonical={`${BRAND.domain}/`}
>

  <Fragment slot="head">
    <!-- Keep page-unique items only -->
    <link rel="preload" as="image" href="/hero-illustration.svg" fetchpriority="high" />
    <link rel="preload" as="image" href="/logo-white.svg" />
    <meta charset="UTF-8" />

    <!-- Home-only JSON-LD -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "EmploymentAgency",
        "name": BRAND.name ?? "Init Source Ltd",
        "url": `${BRAND.domain}/`,
        "logo": `${BRAND.domain}/logo.svg`,
        "image": `${BRAND.domain}/og-image.jpg`,
        "description": "UK tech recruitment for software, data, and product roles. Fast, precise, human-first hiring.",
        "email": BRAND.email,
        "telephone": BRAND.tel,
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "71-75 Shelton Street, Covent Garden",
          "postalCode": "WC2H 9JQ",
          "addressLocality": "London",
          "addressCountry": "GB"
        },
        "areaServed": ["GB"],
        "sameAs": ["https://www.linkedin.com/company/initsource"],
        "contactPoint": [{
          "@type": "ContactPoint",
          "contactType": "Sales",
          "email": BRAND.email,
          "telephone": BRAND.tel,
          "areaServed": "GB",
          "availableLanguage": ["en"]
        }]
      })}
    </script>

    <!-- Programmatic schemas -->
    <Seofaq faqs={faqs} />
    <SeoHowTo steps={steps} />
  </Fragment>


  <Header />

  


  <!-- HERO -->
  <section class="section bg-neutral-light transition-colors dark:bg-slate-900">
    <div class="container maxw grid items-center gap-16 md:grid-cols-2">
      <div>
        <h1 class="h1 font-extrabold text-text dark:text-slate-100">High-signal tech hires. Not CV spam.</h1>
        <p class="lead mt-5">InitSource helps UK teams hire proven <strong>Engineering, Data, and Product</strong> talent through low-volume, high-signal shortlists, real technical screening, and straight communication.</p>
        <p class="mt-4 max-w-2xl text-lg text-gray-600 dark:text-slate-300">
          See a focused shortlist, not 30 CVs.
        </p>
        <div class="mt-10 flex flex-wrap gap-4">
          <a href="#contact" class="inline-flex items-center rounded-full bg-primary px-7 py-4 text-lg font-semibold text-white transition-colors hover:bg-accent hover:text-slate-900">See 2‚Äì5 candidates per role ‚Üí</a>
          <a
            href="#process"
            class="inline-flex items-center rounded-full border border-neutral bg-white px-7 py-4 text-lg font-medium transition-colors hover:bg-neutral-light dark:border-slate-700 dark:bg-slate-950/70 dark:text-slate-200 dark:hover:bg-slate-900"
          >
            How our process works ‚Üí
          </a>
        </div>
        <p class="mt-4 text-sm text-gray-500 dark:text-slate-400">Driven by Tech | Powered by People</p>
      </div>
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-lg transition-shadow duration-300 ease-in-out hover:shadow-xl dark:border-slate-700 dark:bg-slate-900/70">
      <div class="overflow-hidden rounded-xl border border-transparent dark:border-slate-800">
        <img
          src="/hero-illustration.svg"
          alt="Hiring dashboard"
          class="rounded-2xl border border-gray-200 bg-gradient-to-b from-white to-gray-50 p-8 opacity-80 shadow-lg transition-opacity duration-300 hover:opacity-100 dark:border-slate-700 dark:from-slate-900 dark:to-slate-800"
        />
      </div>
    </div>
  </section>

<!-- ABOUT -->
<section id="about" class="section bg-slate-50 transition-colors dark:bg-slate-950">
  <div class="container maxw grid md:grid-cols-2 items-center gap-12">
    <div>
      <h2 class="h2 font-bold text-text dark:text-slate-100">
        About <span class="text-primary">InitSource</span>
      </h2>

      <p class="mt-4 text-lg leading-snug text-gray-600 dark:text-slate-300">
        InitSource is a specialist tech recruitment partner for UK companies that care more about <strong>quality</strong> than volume.
        We combine a developer's understanding of tech with structured screening, so you only meet candidates who can actually do the work.
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-3 mt-10 text-center md:text-left gap-8">
        <div>
          <p class="text-xl font-semibold text-primary">Precision Matching</p>
          <p class="text-sm text-gray-600 dark:text-slate-400">We don't blast CVs. We build a clear profile of what "great" looks like for your team, then send a small shortlist of candidates who fit on skills, mindset, and impact.</p>
        </div>
        <div>
          <p class="text-xl font-semibold text-primary">Human Expertise</p>
          <p class="text-sm text-gray-600 dark:text-slate-400">Every candidate is screened in conversation ‚Äì technical depth, communication, and how they'll affect the team. No AI-generated profiles, no buzzword chasing.</p>
        </div>
        <div>
          <p class="text-xl font-semibold text-primary">Transparent Process</p>
          <p class="text-sm text-gray-600 dark:text-slate-400">Clear expectations, honest feedback, and visibility at every stage. If the brief, budget, or market are misaligned, we'll say it, not hide it.</p>
        </div>
      </div>

      <div class="mt-10 flex gap-4">
        <a
          href="#contact"
          class="rounded-full bg-primary px-6 py-3 font-semibold text-white transition hover:bg-accent hover:text-slate-900"
        >
          Get Started
        </a>
        <a
          href="#process"
          class="rounded-full border border-primary px-6 py-3 font-semibold text-primary transition hover:bg-primary hover:text-white"
        >
          Our Process
        </a>
        </div>
      </div>

      <!-- Visual Column -->
      <div class="rounded-2xl border border-gray-200 bg-gradient-to-b from-white to-gray-50 p-8 opacity-80 shadow-lg transition-opacity duration-300 hover:opacity-100 dark:border-slate-700 dark:from-slate-900 dark:to-slate-800">
        <img src="/About-section.svg" alt="Recruitment workflow" class="w-full rounded-xl" />
      </div>
    </div>
  </div>
</section>



 <!-- SERVICES -->
<section id="services" class="bg-slate-50 py-20 transition-colors dark:bg-slate-950">
  <div class="container maxw">
    <h2 class="text-4xl font-extrabold text-slate-900 transition-colors md:text-5xl dark:text-slate-100">
      Our <span class="text-[#007BFF] dark:text-accent">Services</span>
    </h2>
    <p class="mt-3 max-w-2xl text-lg text-slate-500 dark:text-slate-300">
      Build your team with speed, precision, and long-term fit.
    </p>

    <div class="mt-12 grid gap-8 md:grid-cols-3">
      <!-- Card 1 -->
      <article class="group h-full rounded-2xl border border-gray-200 bg-white p-8 shadow-sm transition hover:shadow-lg dark:border-slate-700 dark:bg-slate-900/70">
        <div class="flex h-full flex-col">
          <div class="mb-6 inline-grid size-12 place-items-center rounded-xl bg-blue-50 text-[#007BFF] dark:bg-blue-500/20">
            <span class="text-xl">&#x1F4BC;</span>
          </div>
          <h3 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">Permanent Recruitment</h3>
          <p class="mt-3 leading-snug text-slate-500 dark:text-slate-300">
            Engineering, data, and product specialists who can grow with your team.
            Shortlists of high-signal candidates only ‚Äì reducing interview waste and mis-hires.
          </p>
        
        </div>
      </article>

      <!-- Card 2 -->
      <article class="group h-full rounded-2xl border border-gray-200 bg-white p-8 shadow-sm transition hover:shadow-lg dark:border-slate-700 dark:bg-slate-900/70">
        <div class="flex h-full flex-col">
          <div class="mb-6 inline-grid size-12 place-items-center rounded-xl bg-blue-50 text-[#007BFF] dark:bg-blue-500/20">
            <span class="text-xl">&#x2699;</span>
          </div>
          <h3 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">Contract Talent</h3>
          <p class="mt-3 leading-snug text-slate-500 dark:text-slate-300">
            Get experienced contractors ready to deliver from day one.
            Low-volume, high-signal shortlists so you scale projects without misfires.
          </p>
          
        </div>
      </article>

      <!-- Card 3 -->
      <article class="group h-full rounded-2xl border border-gray-200 bg-white p-8 shadow-sm transition hover:shadow-lg dark:border-slate-700 dark:bg-slate-900/70">
        <div class="flex h-full flex-col">
          <div class="mb-6 inline-grid size-12 place-items-center rounded-xl bg-blue-50 text-[#007BFF] dark:bg-blue-500/20">
            <span class="text-xl">&#x1F3AF;</span>
          </div>
          <h3 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">Talent Sourcing</h3>
          <p class="mt-3 leading-snug text-slate-500 dark:text-slate-300">
            Access targeted shortlists built from deep research and outreach.
            You manage interviews ‚Äî we deliver qualified, high-signal candidates fast.
          </p>
          
        </div>
      </article>
    </div>
  </div>
</section>



<!-- PROCESS -->
<section id="process" class="bg-white py-20 transition-colors dark:bg-slate-950">
  <div class="container maxw">
    <h2 class="text-4xl font-extrabold text-slate-900 transition-colors md:text-5xl dark:text-slate-100">
      Streamlined <span class="text-[#007BFF] dark:text-accent">Hiring Process</span>
    </h2>
    <p class="mt-3 max-w-2xl text-lg text-slate-500 dark:text-slate-300">
      Simple, transparent, and fast from brief to offer.
    </p>

    <!-- Progress indicator -->
    <div class="relative mt-12 hidden md:block">
      <div class="h-1 w-full rounded-full bg-gray-200 dark:bg-slate-700"></div>
      <div class="absolute inset-y-0 left-0 h-1 w-1/3 rounded-full bg-[#007BFF] transition-all dark:bg-accent"></div>
    </div>

    <!-- Steps -->
    <div class="mt-12 grid gap-8 md:grid-cols-3">
      <!-- Step 1 -->
      <article class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm transition hover:shadow-lg dark:border-slate-700 dark:bg-slate-900/70">
        <div class="flex items-center gap-3">
          <span class="grid size-10 place-items-center rounded-lg bg-blue-50 text-lg font-bold text-[#007BFF] dark:bg-blue-500/20">1</span>
          <h3 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">Define the Role</h3>
        </div>
        <p class="mt-4 leading-snug text-slate-500 dark:text-slate-300">
          Scorecard, stack, outcomes, and hiring bar agreed in one focused session.
        </p>
      </article>

      <!-- Step 2 -->
      <article class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm transition hover:shadow-lg dark:border-slate-700 dark:bg-slate-900/70">
        <div class="flex items-center gap-3">
          <span class="grid size-10 place-items-center rounded-lg bg-blue-50 text-lg font-bold text-[#007BFF] dark:bg-blue-500/20">2</span>
          <h3 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">Source & Screen</h3>
        </div>
        <p class="mt-4 leading-snug text-slate-500 dark:text-slate-300">
          Targeted outreach, technical checks, and detailed candidate notes on fit and availability.
        </p>
      </article>

      <!-- Step 3 -->
      <article class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm transition hover:shadow-lg dark:border-slate-700 dark:bg-slate-900/70">
        <div class="flex items-center gap-3">
          <span class="grid size-10 place-items-center rounded-lg bg-blue-50 text-lg font-bold text-[#007BFF] dark:bg-blue-500/20">3</span>
          <h3 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">Interview & Hire</h3>
        </div>
        <p class="mt-4 leading-snug text-slate-500 dark:text-slate-300">
          Scheduling, feedback loops, offers, and post-hire follow-through for lasting success.
        </p>
      </article>
    </div>
<!-- CTA -->
    <div class="mt-12">
      <a
        href="#contact"
        class="inline-flex items-center rounded-full bg-[#007BFF] px-7 py-4 text-lg font-semibold text-white transition hover:bg-[#00E6C3] hover:text-slate-900 dark:hover:text-slate-900"
      >
        Start Now
      </a>
    </div>
  </div>
</section>


 <!-- CTA BAND -->
<section class="bg-gradient-to-r from-primary to-accent text-white">
  <div class="container maxw py-14 flex flex-col md:flex-row items-center justify-between gap-6 text-center md:text-left">
    <h3 class="text-3xl md:text-4xl font-bold leading-tight">
      Ready to find top tech talent?
      <span class="block text-white/80 text-lg font-normal mt-2">
        Partner with InitSource to hire faster and smarter.
      </span>
    </h3>
    <a href="#contact"
       class="inline-flex items-center rounded-full bg-white px-8 py-4 text-lg font-semibold text-primary shadow-md transition-all duration-200 hover:shadow-lg hover:opacity-95 dark:bg-slate-100 dark:text-primary dark:hover:bg-slate-200">
       Get Started
    </a>
  </div>
</section>

 <!-- CONTACT FORM SECTION -->
  <section id="contact" class="section bg-white transition-colors dark:bg-slate-950">
    <div class="container max-w-3xl mx-auto text-center">
      <h2 class="text-4xl font-extrabold text-slate-900 dark:text-slate-100">Start Hiring with Confidence</h2>
      <form id="contactForm" class="mt-10 grid gap-5 text-left">
        <input type="hidden" name="_subject" value="New lead from Init Source" />
        <input type="hidden" name="_redirect" value="https://initsource.co.uk/thanks" />
        <label class="block">
          <span class="sr-only">Your name</span>
          <input required name="name" placeholder="Your name"
                 class="w-full rounded-lg border border-gray-300 px-5 py-4 text-lg transition-colors dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:placeholder-slate-400"
                 autocomplete="name" />
        </label>
        <label class="block">
          <span class="sr-only">Work email</span>
          <input required type="email" name="email" placeholder="Work email"
                 class="w-full rounded-lg border border-gray-300 px-5 py-4 text-lg transition-colors dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:placeholder-slate-400"
                 autocomplete="email" inputmode="email" />
        </label>
        <label class="block">
          <span class="sr-only">Message</span>
          <textarea required name="message" aria-label="Message" placeholder="What roles are you hiring for?"
                    class="w-full h-40 rounded-lg border border-gray-300 px-5 py-4 text-lg transition-colors dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:placeholder-slate-400"></textarea>
        </label>
        <button type="submit"
                class="rounded-full bg-primary px-7 py-4 text-lg font-semibold text-white transition-colors hover:bg-accent hover:text-slate-900 dark:hover:text-slate-900">
          Send
        </button>
      </form>
      <p class="mt-6 text-sm text-gray-500 dark:text-slate-400">
        By submitting this form, you agree to our
        <a href="/privacy" class="text-primary hover:underline dark:text-accent" target="_blank" rel="noopener">Privacy Policy</a>.
      </p>
    </div>
    <script>
      const f = document.getElementById('contactForm');
      f.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(f).entries());
        const res = await fetch('/api/contact', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        const out = await res.json().catch(() => ({}));
        if (res.ok && out.ok) {
          window.location.href = out.redirect || data._redirect || '/thanks';
        } else {
          alert('Submission failed: ' + (out.error || res.status));
        }
      });
    </script>
  </section>
   
