 <!-- CONTACT FORM SECTION -->
  <section id="contact" class="section bg-white">
    <div class="container max-w-3xl mx-auto text-center">
      <h2 class="text-4xl font-extrabold text-[#111827]">Start Hiring with Confidence</h2>
      <form id="contactForm" class="mt-10 grid gap-5 text-left">
        <input type="hidden" name="_subject" value="New lead from Init Source" />
        <input type="hidden" name="_redirect" value="https://initsource.co.uk/thanks" />
        <label class="block">
          <span class="sr-only">Your name</span>
          <input required name="name" placeholder="Your name"
                 class="w-full border border-gray-300 rounded-lg px-5 py-4 text-lg" autocomplete="name" />
        </label>
        <label class="block">
          <span class="sr-only">Work email</span>
          <input required type="email" name="email" placeholder="Work email"
                 class="w-full border border-gray-300 rounded-lg px-5 py-4 text-lg"
                 autocomplete="email" inputmode="email" />
        </label>
        <label class="block">
          <span class="sr-only">Message</span>
          <textarea required name="message" aria-label="Message" placeholder="What roles are you hiring for?"
                    class="w-full border border-gray-300 rounded-lg px-5 py-4 h-40 text-lg"></textarea>
        </label>
        <button type="submit"
                class="rounded-full bg-primary px-7 py-4 text-white text-lg font-semibold">
          Send
        </button>
      </form>
      <p class="mt-6 text-sm text-gray-500">
        By submitting this form, you agree to our
        <a href="/privacy" class="text-primary hover:underline" target="_blank" rel="noopener">Privacy Policy</a>.
      </p>
    </div>
    <script>
      const f = document.getElementById('contactForm');
      f.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(f).entries());
        const res = await fetch('/api/contact', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        const out = await res.json().catch(() => ({}));
        if (res.ok && out.ok) {
          window.location.href = out.redirect || data._redirect || '/thanks';
        } else {
          alert('Submission failed: ' + (out.error || res.status));
        }
      });
    </script>
  </section>





