---
import Base from "../layouts/Base.astro";
import "../styles/base.css";
import Header from "../components/Header.astro";

import { BRAND } from "../seo/site.config";
import SeoFaq from "../components/SeoFaq.astro";
import SeoHowTo from "../components/SeoHowTo.astro";

const faqs = [
  { q: "What roles do you hire for?", a: "Software, data, and product roles across the UK." },
  { q: "How fast can we hire?", a: "Shortlist in days. Offers in weeks, not months." }
];

const steps = [
  { name: "Discovery", text: "Clarify the role, success profile, and timelines." },
  { name: "Sourcing", text: "Targeted outreach and screening of qualified candidates." },
  { name: "Shortlist", text: "3‚Äì5 top candidates delivered with structured notes." },
  { name: "Offer & Start", text: "Negotiation and onboarding coordination." }
];
---

<Base
  title="Init Source Ltd | Hire Proven Software & Tech Talent Fast"
  description="AI-first, UK-based recruitment for software, data, and product professionals. Hire top talent in weeks, not months."
  image={`${BRAND.domain}/og-image.jpg`}
  canonical={`${BRAND.domain}/`}
>

  <Fragment slot="head">
    <!-- Keep page-unique items only -->
    <link rel="preload" as="image" href="/hero-illustration.svg" fetchpriority="high" />
    <link rel="preload" as="image" href="/logo-white.svg" />
    <meta charset="UTF-8" />

    <!-- Home-only JSON-LD -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "EmploymentAgency",
        "name": BRAND.name ?? "Init Source Ltd",
        "url": `${BRAND.domain}/`,
        "logo": `${BRAND.domain}/logo.svg`,
        "image": `${BRAND.domain}/og-image.jpg`,
        "description": "UK tech recruitment for software, data, and product roles. Fast, precise, human-first hiring.",
        "email": BRAND.email,
        "telephone": BRAND.tel,
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "71-75 Shelton Street, Covent Garden",
          "postalCode": "WC2H 9JQ",
          "addressLocality": "London",
          "addressCountry": "GB"
        },
        "areaServed": ["GB"],
        "sameAs": ["https://www.linkedin.com/company/initsource"],
        "contactPoint": [{
          "@type": "ContactPoint",
          "contactType": "Sales",
          "email": BRAND.email,
          "telephone": BRAND.tel,
          "areaServed": "GB",
          "availableLanguage": ["en"]
